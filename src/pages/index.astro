---
import Navbar from "../components/navbar.astro";
import Footer from "../components/footer.astro";
import FeatureSection from "../components/features.astro";
import Hero from "../components/hero.astro";
import Layout from "../components/layout.astro";
import Mission from "../components/mission.astro";
import ContactUs from "../components/contact-us.astro";
import Solutions from "../components/solutions.astro";
import Vision from "../components/vision.astro";
import { SEO } from "astro-seo";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <title>MedSimpl</title>
    <style>
      html {
        scroll-behavior: smooth;
      }
    </style>

    <SEO
      title="MedSimpl"
      description="A heavily optimized medical appointment booking platform."
      canonical="https://medsimpl.com"
      openGraph={{
        basic: {
          title: "MedSimpl",
          type: "A type.",
          image: "/frame.webp",
        },
        image: { url: "/frame.webp" },
      }}
      extend={{
        link: [
          { rel: "icon", type: "image/png", href: "/favicon.png" },
          { rel: "apple-touch-icon", href: "/favicon.png" },
        ],
      }}
    />
  </head>
  <body>
    <Layout>
      <Navbar />
      <main class="pt-16">
        <Hero />
        <FeatureSection />
        <Solutions />
        <Vision />
        <Mission />
        <ContactUs />
      </main>
      <Footer />
    </Layout>
  </body>
</html>